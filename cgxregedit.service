[Unit]
Description=CG X REGEDIT Cloud Backend
After=network.target

[Service]
Type=simple
User=cgxvivek
WorkingDirectory=/home/cgxvivek/STREAMERPANEL/backend
Environment="PATH=/home/cgxvivek/STREAMERPANEL/venv/bin"
ExecStart=/home/cgxvivek/STREAMERPANEL/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8963 --workers 2
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
